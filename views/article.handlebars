<div class="row">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <a href="{{article.link}}">
                <img src="{{article.image}}" />
            </a>
            <h1 class="display-4">
                {{article.title}}
            </h1>
            <p class="lead">{{article.summary}}</p>
            <p class="lead">
                <a class="btn btn-primary btn-lg" href="{{article.link}}" role="button">Learn more</a>
            </p>
        </div>
    </div>
</div>
<hr>
<div class="row">
    <form action="/comment" method="POST" class="card-panel col s8">
        <h5>Comment on this Article:</h5>
        <div class="form-group">
            <label for="commentTitle">Subject</label>
            <input class="form-control" id="commentTitle" placeholder="Enter a title">
        </div>
        <div class="form-group">
            <label for="commentArea">Example Text Area</label>
            <textarea class="form-control" id="commentArea" rows="3" placeholder="Please leave a comment..."></textarea>
        </div>
        <!-- Submit Button -->
        <div class="input-field">
            <input class="btn btn-success" type="submit" value="Submit">
        </div>
    </form>
</div>
<hr>
<div class="row">
    <h5>Comments:</h5>
</div>
{{#if article.comment}} 
{{#each article.comment}}
<div class="card-columns">
    <div class="card" id="{{_id}}">
        <div class="card-header">
            {{subject}}
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>{{body}}</p>

            </blockquote>
        </div>
    </div>
</div>
<div class="row"></div>
{{/each}} 
{{else}}
<p>No Comments Yet.</p>
{{/if}}
</p>
</div>